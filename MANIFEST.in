# Include the README and LICENSE files
include README.md
include LICENSE
include CLAUDE.md

# Include the .env.example file
include .env.example

# Include the requirements files
recursive-include requirements *.txt

# Include the documentation
recursive-include docs *.md *.rst *.txt

# Include test configuration files  
include pytest.ini

# Include py.typed marker for PEP 561
include src/gmoo_sdk/py.typed

# Exclude compiled files and caches
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .git
global-exclude .gitignore

# Exclude the DLL files (users should provide their own)
recursive-exclude dll *

# Exclude build artifacts
recursive-exclude htmlcov *
exclude coverage.xml
recursive-exclude .pytest_cache *